
@{
    Layout = null;
}
@model DevQuizzMVC.DTO.UserDTO
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    
 
    <!--===============================================================================================-->
    <link href="~/Content/cssLogin/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/cssLogin/font-awesome.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/cssLogin/icon-font.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/cssLogin/animate.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/cssLogin/hamburgers.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/cssLogin/animsition.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/cssLogin/select2.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/cssLogin/daterangepicker.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/cssLogin/util.css" rel="stylesheet" />
    <link href="~/Content/cssLogin/main.css" rel="stylesheet" />
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('/Content/images/bg-01.jpg');">

            <div class="wrap-login100 p-t-30 p-b-50">
                <span class="login100-form-title p-b-41">
                    Authentification
                </span>
                <form class="login100-form validate-form p-b-33 p-t-5 has-warning has-feedback" method="post">
                    @Html.ValidationMessageFor(m => m.Email)
                    <div class="wrap-input100">
                        <input class="input100" type="text" name="Email" placeholder="Adresse mail">
                        <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                    </div>


                    <div class="wrap-input100">
                        <input class="input100" type="password" name="Password" placeholder="Mot de passe">
                        <span class="focus-input100" data-placeholder="&#xe80f;"></span>
                        <div class="text-danger">
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>

                    <div class="container-login100-form-btn m-t-32">
                        <button class="login100-form-btn">
                            Se Connecter
                        </button>
                        <br />

                    </div>
                    <br />
                    <div class="form-control text-secondary"><a href="/Login/ResetPassword"> Mot de passe oublié</a></div>
                    

                    <div class="form-control">
                        <a href="/Account/Index" class="btn btn-primary btn-block">Créer un compte </a>
                    </div>
                    <div class="mt-3">


                        <p class="text-danger  text-center">
                            @if (ViewBag.Erreur != null)
                            {@ViewBag.Erreur;
                        }
                        </p>
                    </div>

                    <div></div>
                </form>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>


    



        <!--===============================================================================================-->
        <script src="~/Content/jsLogin/jquery-3.2.1.min.js"></script>
        <!--===============================================================================================-->
        <script src="~/Content/jsLogin/animsition.min.js"></script>
        <!--===============================================================================================-->
        <script src="~/Content/jsLogin/popper.js"></script>
        <script src="~/Content/jsLogin/bootstrap.min.js"></script>
        <!--===============================================================================================-->
        <script src="~/Content/jsLogin/select2.min.js"></script>
        <!--===============================================================================================-->
        <script src="~/Content/jsLogin/moment.min.js"></script>
        <script src="~/Content/jsLogin/daterangepicker.js"></script>
        <!--===============================================================================================-->
        <script src="~/Content/jsLogin/countdowntime.js"></script>
        <!--===============================================================================================-->
        <script src="~/Content/jsLogin/main.js"></script>

</body>
</html>
